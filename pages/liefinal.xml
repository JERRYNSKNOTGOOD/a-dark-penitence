<page id="liefinal" bg_color="black">
  <agent id="titulo" 
    x="center" 
    y="70" 
    text="Suicídio... Que triste. Tua penitência é clicar no botāo 11 milhões de vezes..." 
    animation="fade-in"
    color="white" 
    font-size="24" />
  <fab-if when="$pontos <= 11000000">
    <agent
      id="clickermilhao"
      x="center"
      y="center"
      text text="$pontos"
      on_click="set(pontos, $pontos + 1"
      />
  </fab-if>
</page>