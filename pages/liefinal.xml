<page id="liefinal" bg_color="black">
  <agent id="titulo" 
    x="center" 
    y="70" 
    text="Suicídio... Que triste. Tua penitência é clicar no botāo 11 milhões de vezes..." 
    animation="fade-in"
    color="white" 
    font-size="24" />
  <fab-if when="$pontosmillion <= 11000000">
    <agent
      id="clickermilhao"
      x="center"
      y="center"
      text="$pontosmillion"
      on_click="set(pontosmillion, $pontosmillion + 1)"
      />
  </fab-if>
</page>