<page id="middle" bg_image="tech-bg-lab.png" bg_music="osts-vilo.mp3">
  <agent
    id="objective"
    text="Objetivo: dar 10 clicks"
    color="white"
    x="center"
    y="0"
    font-size="30"
  />
  <agent
    id="clickador1"
    x="center"
    y="center"
    text="cliques: $pontos"
    font-size="70"
    on_click = "set(pontos, $pontos + 1)"
  />
<fab-if when="$pontos >= 10">
  <agent
    id="next_page_text"
    text="Proxima Pagina"
    animation="glitch"
    y="480"
    x="640"  
    on_click="goToPage('ending')"
  />
</fab-if>
</page>